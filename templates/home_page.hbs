
<style>
  /* Used in Homepage#categories and Community#topics */
.blocks-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
  list-style: none;
  padding: 0;
}

@media (min-width: 768px) {
  .blocks-list {
    margin: 0 -15px;
  }
}

.blocks-item {
  border: 1px solid $brand_color;
  border-radius: 4px;
  box-sizing: border-box;
  color: $brand_color;
  display: flex;
  flex: 1 0 340px;
  margin: 0 0 30px;
  max-width: 100%;
  text-align: center;
}

@media (min-width: 768px) {
  .blocks-item {
    margin: 0 15px 30px;
  }
}

.blocks-item:hover, .blocks-item:focus, .blocks-item:active {
  background-color: $brand_color;
}

.blocks-item:hover *, .blocks-item:focus *, .blocks-item:active * {
  color: $brand_text_color;
  text-decoration: none;
}

.blocks-item-internal {
  background-color: transparent;
  border: 1px solid #ddd;
}

.blocks-item-internal .icon-lock {
  height: 15px;
  width: 15px;
  bottom: 5px;
  position: relative;
}

.blocks-item-internal a {
  color: $text_color;
}

.blocks-item-link {
  color: $brand_color;
  padding: 20px 30px;
  display: flex;
  flex-direction: column;
  flex: 1;
  justify-content: center;
  border-radius: inherit;
}

.blocks-item-link:hover, .blocks-item-link:active {
  text-decoration: none;
}

.blocks-item-link:focus {
  outline: 0;
  box-shadow: 0 0 0 3px $brand_color;
  text-decoration: none;
}

.blocks-item-title {
  font-size: 20px;
  font-weight: bold;
  padding: 8px;
  transition: background-color 0.3s ease;
}

.blocks-item-title:hover, .blocks-item-title:focus, .blocks-item-title:active {
  background-color: #C7DAE7;
  width: 100%; /* Changed from fixed width to 100% */
  height: auto; /* Changed from fixed height to auto */
  white-space: nowrap; /* Ensure the title stays on one line */
  overflow: hidden; /* Hide overflow text */
  text-overflow: ellipsis; /* Add ellipsis for overflowing text */
}

.blocks-item-description {
  font-weight: 300;
  margin: 0;
}

.blocks-item-description:not(:empty) {
  margin-top: 10px;
}

.promoted-articles-item, .article-list-item, .collapsible-sidebar-body li {
  border: none;
  border-radius: 0px;
  border-left: 7px solid #C7DAE7;
  box-sizing: border-box;
  color: rgba(0, 0, 0, 1);
  display: block;
  flex: 1 0 340px;
  margin: 0 15px 30px;
  min-height: 90px;
  max-width: 368px;
  text-align: left;
  overflow: hidden;
  padding-left: 26px;
  background: linear-gradient(to right, #C7DAE7 50%, white 50%);
  background-size: 200% 100%;
  background-position: right bottom;
}

/* Updated styles for mobile responsiveness */
@media (max-width: 1023px) {
  .promoted-articles-item, .article-list-item, .collapsible-sidebar-body li {
    flex: 0 0 auto;
    width: 100%;
    height: auto; /* Changed from fixed height to auto */
    margin: 0 0 15px;
    max-width: none;
    display: flex;
    align-items: center;
  }

  .promoted-articles-item a, .article-list-item a, .collapsible-sidebar-body li a {
    padding: 0 15px 0 26px;
    display: flex;
    align-items: center;
    width: 100%;
    height: 100%;
  }

  .blocks-item-title:hover, .blocks-item-title:focus, .blocks-item-title:active {
    width: 100%; /* Changed from fixed width to 100% */
    height: auto; /* Changed from fixed height to auto */
    white-space: nowrap; /* Ensure the title stays on one line */
    overflow: hidden; /* Hide overflow text */
    text-overflow: ellipsis; /* Add ellipsis for overflowing text */
  }
}

/* New styles to prevent icon shifting */
.blocks-item-icon {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 60px; /* Adjust this value as needed */
  margin-bottom: 10px;
}

.blocks-item-icon img {
  max-height: 100%;
  width: auto;
}
</style>
